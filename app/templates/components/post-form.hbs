
<form class="form-group" {{action 'save' on='submit'}}>
<lable>Title</lable>
  {{input
  class="form-control"
  value=post.title
  required="required"
  maxlength=45
  placeholder="45 character limit"
  }}
<lable>Body</lable>
  {{textarea
  class="form-control"
  value=post.body
  rows=20
  required="required"
  spellcheck="spellcheck"
  }}


<button class='btn btn-default' type='submit'>Submit</button>
<button class='btn btn-danger' {{action 'cancel'}}>cancel</button>

</form>
